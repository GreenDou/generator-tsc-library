{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "target": "es5",
    "lib": ["dom", "es6", "dom.iterable", "scripthost"],
    "outDir": "dist/es5",
    "removeComments": true,
    "strict": true
  },
  "exclude": ["dist", "libs", "node_modules"]
}
